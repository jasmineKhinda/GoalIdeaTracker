<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dip" />

            <gradient
                android:angle="270"
                android:centerColor="#e4dcdc"
                android:centerY="0.75"
                android:endColor="#e4dcdc"
                android:startColor="#e4dcdc" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dip" />

                <gradient
                    android:angle="270"
                    android:endColor="#FF8B8B"
                    android:startColor="#FF8B8B" />
            </shape>
        </clip>
    </item>

</layer-list>